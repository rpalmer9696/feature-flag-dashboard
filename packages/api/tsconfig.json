{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*", "./public/*"]
    },
    "noEmit": false
  },
  "include": ["**/*.ts", "**/*.tsx", "./env.js"],
  "exclude": ["node_modules"]
}
